@model InfrastructureModule.Models.Pages.Post.Comment
    
@if (Model.Count() > 0)
{
    <h4>@Sitecore.Globalization.Translate.Text("C.Comments")</h4>
    <hr>

    foreach (var comment in Model)
    {
        <div>
            <span>@comment.Author</span>
            <p>@comment.Text</p>
            <span>@comment.Date</span>
            <hr/>
        </div>
    }
}
