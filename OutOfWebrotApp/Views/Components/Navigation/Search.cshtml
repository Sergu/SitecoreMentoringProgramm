@using Sitecore.Mvc
@model OutOfWebrotApp.Models.Pages.Search.SearchModel

<li class="nav_search">
    @using (Html.BeginRouteForm(Sitecore.Mvc.Configuration.MvcSettings.SitecoreRouteName, FormMethod.Post))
    {
        @Html.Sitecore().FormHandler("Search", "SearchHeaderComponent")
        <form class="navbar-form navbar-right">
            <div class="form-group">
                @Html.EditorFor(x => x.Title, new { htmlAttributes = new { @class = "form-control" } })
                @*<input type="text" class="form-control" placeholder="Search">*@
            </div>
            <button type="submit" class="btn btn-default">@Sitecore.Globalization.Translate.Text("S.Search")</button>
        </form>
    }
</li>
