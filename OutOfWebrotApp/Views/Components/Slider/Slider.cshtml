@using System.Runtime.Remoting.Messaging
@using Sitecore.Configuration
@using Sitecore.Data
@using Sitecore.Mvc
@using Sitecore.Data.Fields;
@model OutOfWebrotApp.Models.Components.Slider.Slider

<div>
    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @{ var pictureCounter = 0; }
            @foreach (var picture in Model.Pictures)
            {
            
                <li data-target="#carousel-example-generic" data-slide-to="@pictureCounter" class="@(pictureCounter++ == 0 ? "active" : "") " ></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            @{ pictureCounter = 0; }
            @foreach (var picture in Model.Pictures)
            {
                <div class="item @( pictureCounter++ == 0 ? "active" : "" )">
                    <img src="@picture.contentUrl" style="height: 500px; margin: auto auto;" alt="@picture.alt">
                </div>
            }
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        var c = $('.carousel');
        c.carousel({
            interval: @Model.Speed,
        });
    })
</script>