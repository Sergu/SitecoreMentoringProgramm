<configuration xmlns:patch="http://www.sitecore.net/xmlconfig/">
    <sitecore>
        <sites>
            <site name="newsBlog" patch:before="site[@name='website']"
                  hostName ="newsBlog"
                  virtualFolder="/"
                  physicalFolder="/"
                  rootPath="/sitecore/Content/blog"
                  startItem="/home"
                  database="web"
                  domain="extranet"
                  allowDebug="true"
                  cacheHtml="false"
                  htmlCacheSize="50MB"
                  enablePreview="true"
                  enableWebEdit="true"
                  enableDebugger="true"
                  disableClientData="false"
                  enableItemLanguageFallback="true"
                  enableFieldLanguageFallback="true"
                  enforceVersionPresence="true"
                  dictionaryDomain="Global Dictionary" />

            <site name="sitecoreBlog" patch:before="site[@name='website']"
                  hostName ="sitecoreBlog"
                  virtualFolder="/"
                  physicalFolder="/"
                  rootPath="/sitecore/content/sitecoreblog"
                  startItem="/home"
                  database="web"
                  domain="extranet"
                  allowDebug="true"
                  cacheHtml="false"
                  htmlCacheSize="50MB"
                  enablePreview="true"
                  enableWebEdit="true"
                  enableDebugger="true"
                  disableClientData="false"
                  enableItemLanguageFallback="true"
                  enableFieldLanguageFallback="true"
                  enforceVersionPresence="true"
                  dictionaryDomain="SitecoreBlogDictionary" />

            <!--Enable Item level language fallback - Allows a item to completely fall back to another language-->
            <!--Enable Field level language fallback - Allows control at the field level where only selected fields fall back to another language-->
            <site name="shell">
                <patch:attribute name="enableItemLanguageFallback">true</patch:attribute>
                <patch:attribute name="enableFieldLanguageFallback">true</patch:attribute>
            </site>
            <site name="website">
                <patch:attribute name="enableItemLanguageFallback">true</patch:attribute>
                <patch:attribute name="enableFieldLanguageFallback">true</patch:attribute>
            </site>

        </sites>
    </sitecore>
</configuration>
