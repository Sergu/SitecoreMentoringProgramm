@model InfrastructureModule.Models.Components.Navigation.Languages

@if (Model.LanguageCollection.Count != 0)
{
    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@Model.LanguageCollection.First(c => c.IsCurrentLanguage).Key <span class="caret"></span></a>
        <ul class="dropdown-menu">
            @foreach (var language in Model.LanguageCollection)
            {
                <li><a href="@string.Concat(Model.ItemUrl, "?sc_lang=", language.Value)">@language.Key</a></li>
            }
        </ul>
    </li>
}

