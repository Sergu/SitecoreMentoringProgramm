@using Sitecore.Mvc
@model OutOfWebrotApp.Models.Pages.Posts.Posts

<div class="jumbotron">
    <h3>Posts </h3>
    <p>This example is a quick exercise to illustrate how the default, static and fixed to top navbar work. It includes the responsive CSS and HTML, so it also adapts to your viewport and device.</p>
    <p>To see the difference between static and fixed top navbars, just scroll.</p>
</div>

@Html.Sitecore().Placeholder("postsContent")

@foreach (var post in Model.PostsCollection)
{
    <div class="col-md-4">
        <h2>@post.Title</h2>
        <p>@post.Body</p>
        <p>
            <a class="btn btn-default" href="@post.Url" role="button">View details »</a>
        </p>
    </div>
}