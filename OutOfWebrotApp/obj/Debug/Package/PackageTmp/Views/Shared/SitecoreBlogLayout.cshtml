@using Sitecore.Mvc
@* @using Sitecore.Mvc.Analytics.Extensions *@
@{
    Layout = null;
}
<!DOCTYPE html>
<html>
    <head>
        <title>@Html.Sitecore().Field("title", new { DisableWebEdit = true })</title>
        
        <link href="/Content/bootstrap.min.css" rel="stylesheet">
        <link href="/Content/Styles/AboutLayout/blog.css" rel="stylesheet">
        <link href="/Content/Styles/Components/Search/Search.css" rel="stylesheet"/>
        <link href="/Content/Styles/Components/TagsTree/dist/themes/default/style.min.css" rel="stylesheet" />
        <link href="/Content/Styles/SitecoreBlog/SitecoreBlogLayout.css" rel="stylesheet"/>
        <script src="/Scripts/jquery-1.10.2.min.js"></script>
        <script src="/Scripts/bootstrap.min.js"></script>
        <script src="/Content/Styles/Components/TagsTree/dist/jstree.min.js"></script>
        <script src="/Scripts/Components/PostSearch/PostSearchComponent.js"></script>

    </head>
    <body>
        
        <nav class="navbar navbar-fixed-top navbar-inverse" role="navigation">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
            
                <div id="navbar" class="collapse navbar-collapse">
                    <ul class="nav navbar-nav">
                        @Html.Sitecore().Placeholder("navigation")
                    </ul>
                </div><!-- /.nav-collapse -->
            </div><!-- /.container -->
        </nav>
        
        
        <div class="container" style="margin-top: 100px;">

            <div class="row row-offcanvas row-offcanvas-right">

                <div class="col-xs-12 col-sm-9">
                    <div class="row">
                        @Html.Sitecore().Placeholder("body")
                    </div><!--/row-->
                </div>
            </div><!--/row-->

            <hr>

            <footer>
                <div class="container">
                    @Html.Sitecore().Placeholder("footer")
                </div>
            </footer>

        </div>
        

    </body>
</html>