<div style="padding: 5px;">
    <div id="carousel-example-generic" class="carousel slide" style="" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @{ var pictureCounter = 0; }
            @foreach (var picture in Model.Pictures)
            {

                <li data-target="#carousel-example-generic" data-slide-to="@pictureCounter" class="@(pictureCounter++ == 0 ? "active" : "") "></li>
            }
        </ol>
            
        @using (Html.EditFrame(
            dataSource: Model.ContextItemId.ToString(),
            buttons: "Custom Buttons",
            tooltip: "ToolBar tooltip",
            title: "Edit Slider Images",
            cssClass: string.Empty,
            parameters: null
            ))
        {
            <!-- Wrapper for slides -->
            <div class="carousel-inner" role="listbox">
                @{ pictureCounter = 0; }
                @foreach (var picture in Model.Pictures)
                {
                    <div class="item @(pictureCounter++ == 0 ? "active" : "")">
                        <img src="@picture.contentUrl" style="height: 500px; margin: 0 auto;" alt="@picture.alt">
                    </div>
                }
            </div>
        }

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>

<script type="text/javascript">
    $(function() {
        var c = $('.carousel');
        c.carousel({
            interval: @Model.Speed,
        });
    })
</script>