@using Sitecore.Mvc
@* @using Sitecore.Mvc.Analytics.Extensions *@

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>Jumbotron Template for Bootstrap</title>

    <!-- Bootstrap core CSS -->
    <link href="/Content/bootstrap.min.css" rel="stylesheet">
    <link href="/Content/Styles/AboutLayout/blog.css" rel="stylesheet">
    <link href="/Content/Styles/Blog/HomeLayout.css"/>
    <link href="/Content/Styles/Components/Search/Search.css" rel="stylesheet"/>
    <link href="/Content/Styles/Components/TagsTree/dist/themes/default/style.min.css" rel="stylesheet" />
    <script src="/Scripts/jquery-1.10.2.min.js"></script>
    <script src="/Scripts/bootstrap.min.js"></script>
    <script src="/Content/Styles/Components/TagsTree/dist/jstree.min.js"></script>
    <script src="/Scripts/Components/PostSearch/PostSearchComponent.js"></script>
    
</head>

<body>
    
    <nav class="navbar navbar-default">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                    <span class="sr-only"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div id="navbar" class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    @Html.Sitecore().Placeholder("navigation")
                </ul>

            </div><!--/.nav-collapse -->
        </div>
    </nav>

    <div class="container">
        <!-- Example row of columns -->
        <div class="row">
            @Html.Sitecore().Placeholder("body")
        </div>

        <hr>
    
        <footer class="footer">
            @Html.Sitecore().Placeholder("footer")
        </footer>
    </div> <!-- /container -->
    <!-- Bootstrap core JavaScript
    ================================================== -->  
    <!-- Placed at the end of the document so the pages load faster -->
    @*<script src="/Scripts/jquery-1.10.2.min.js"></script>
